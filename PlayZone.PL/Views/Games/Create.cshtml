@model CreateGameFormViewModel
@{
	ViewData["Title"] = "Create Games";
}

<h3 class="mt-5">Add a New Game <i class="bi bi-plus-circle-dotted mx-1"></i></h3>

<form asp-action="Create" enctype="multipart/form-data">
	<div class="row my-4">

		<div class="col-md-6">

			<div class="form-group">
				<label asp-for="Name" class="form-label mt-4">Name</label>
				<input asp-for="Name" type="text" class="form-control" placeholder="Name" fdprocessedid="q2fxu">
				<span asp-validation-for="Name" class="alert text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="CategoryId" class="form-label mt-4">Category</label>
				<select asp-for="CategoryId" asp-items="@Model.Categories" class="form-select" fdprocessedid="do6tzz">
					<option value="">Select Category</option>
				</select>
				<span asp-validation-for="CategoryId" class="alert text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="SelectedDevices" class="form-label mt-4">Supported Devices</label>
				<select asp-for="SelectedDevices" asp-items="@Model.Devices" class="form-select" fdprocessedid="do6tzz">
					<option>Select Devices</option>
				</select>
				<span asp-validation-for="SelectedDevices" class="alert text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Description" class="form-label mt-4">Description</label>
				<textarea asp-for="Description" placeholder="Description" class="form-control" rows="3"></textarea>
				<span asp-validation-for="Description" class="alert text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Cover" class="form-label mt-4">Image Cover</label>
				<input asp-for="Cover" class="form-control" type="file" data-rule-extension="jpg,png,jpeg" data-msg-extension="Not allowed extension">
				<span asp-validation-for="Cover" class="text-danger d-block"></span>
				<small id="emailHelp" class="form-text text-muted">Only .jpg - .jpeg - .png files are allowed with max size 1MB.</small>
			</div>

		</div>

		<div class="col-md-6 d-flex justify-content-center overflow-hidden">
			<img class="h-50 cover-preview d-none my-5" alt="Image Cover" />
		</div>


	</div>

	<a>
		<button type="submit" class="btn btn-success" fdprocessedid="h414l">Create</button>
	</a>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
	<script src="~/lib/jquery-validation/dist/additional-methods.min.js" asp-append-version="true"></script>
	<script src="~/js/filesize-validator.js" asp-append-version="true"></script>
	<script src="~/js/game-form.js"></script>

}