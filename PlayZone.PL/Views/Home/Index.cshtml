@using PlayZone.DAL.Models
@model ICollection<Game>
@{
	ViewData["Title"] = "Home";
}

<h1 class="my-5">All Games</h1>

@if (!Model.Any())
{
	<div class="alert alert-dismissible alert-warning my-4">
		<h4 class="alert-heading">No Games!</h4>
		<p>Sorry, No games were added yet.</p>
	</div>
}
else
{
	<div class="row my-5">
		@foreach (var game in Model)
		{
			<div class="col-md-4">
				<div class="card border-light mb-3">
					<div class="card-body d-flex align-items-end" style="background-image: url('@Url.Content($"~/assets/images/games/{game.Cover}")'); background-size: cover; background-position: center; height: 450px;">
						<span class="badge bg-secondary rounded-0 fs-5">@game.Category.Name</span>
					</div>

					<div class="card-footer text-muted d-flex justify-content-between">
						<h5>@game.Name</h5>
						<div>
							@foreach (var gd in game.Device)
							{
								<i class="@gd.Device.Icon mx-1"></i>
							}

						</div>
					</div>
				</div>

			</div>
		}
	</div>
}


